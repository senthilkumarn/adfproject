{
	"name": "copyfromsql_parameter",
	"properties": {
		"activities": [
			{
				"name": "Copy data1",
				"type": "Copy",
				"dependsOn": [],
				"policy": {
					"timeout": "0.12:00:00",
					"retry": 0,
					"retryIntervalInSeconds": 30,
					"secureOutput": false,
					"secureInput": false
				},
				"userProperties": [],
				"typeProperties": {
					"source": {
						"type": "AzureSqlSource",
						"sqlReaderQuery": {
							"value": "@concat('SELECT * FROM', pipeline().parameters.pp_tablename, 'where color = ''',pipeline().parameters.pp_color,'''')",
							"type": "Expression"
						},
						"queryTimeout": "02:00:00",
						"partitionOption": "None"
					},
					"sink": {
						"type": "DelimitedTextSink",
						"storeSettings": {
							"type": "AzureBlobFSWriteSettings"
						},
						"formatSettings": {
							"type": "DelimitedTextWriteSettings",
							"quoteAllText": true,
							"fileExtension": ".txt"
						}
					},
					"enableStaging": false,
					"translator": {
						"type": "TabularTranslator",
						"typeConversion": true,
						"typeConversionSettings": {
							"allowDataTruncation": true,
							"treatBooleanAsNumber": false
						}
					}
				},
				"inputs": [
					{
						"referenceName": "AzureSqlTable3",
						"type": "DatasetReference",
						"parameters": {
							"dd_filename": {
								"value": "@pipeline().parameters.pp_tablename",
								"type": "Expression"
							},
							"dd_color": {
								"value": "@pipeline().parameters.pp_color",
								"type": "Expression"
							}
						}
					}
				],
				"outputs": [
					{
						"referenceName": "DelimitedText3",
						"type": "DatasetReference",
						"parameters": {
							"dd_color": {
								"value": "@pipeline().parameters.pp_color",
								"type": "Expression"
							}
						}
					}
				]
			}
		],
		"parameters": {
			"pp_tablename": {
				"type": "string"
			},
			"pp_color": {
				"type": "string"
			}
		},
		"annotations": []
	}
}